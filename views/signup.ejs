<% include partials/head-preauth %>

<header class="container-fluid">
  <h1 id="intro" class="loginColor"><i class="fa fa-leaf leafLogo"></i> Eucalyptus</h1>
  <p class="lead loginColor">A better way to manage operational tasks.</p>
</header>

<body id="loginBody">

  <div class="col-sm-8 col-sm-offset-2 alert alert-gray">
    This page will create your account within the system; however, before you will be able to login, an Administrator must enable your account.<br />
    <br />
    Please contact <a href="mailto:<%= adminEmail %>"><%= adminEmail %></a> to have your account enabled after signing up.
  </div>

    <div class="col-sm-8 col-sm-offset-2">

      <form class="form-signin" action="/signup" method="post">
        <label><span class="fa fa-sign-in"></span> Sign Up</label>
        <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email Address" required ="" autofocus="" />
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="password" placeholder="Password" required="" />
        </div>
        <div>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
        </div>
        <% if (message != null) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>
        <i class="fa fa-sign-in"></i> Already have an account?<a href="/login"> Login</a>
      </form>

    </div>
  </body>
</html>
