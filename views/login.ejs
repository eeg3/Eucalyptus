<% include partials/head-preauth %>

<header class="container-fluid">
  <h1 id="intro" class="loginColor"><i class="fa fa-leaf leafLogo"></i> Eucalyptus</h1>
  <p class="lead loginColor">Conquering complexity with simplicity.</p>
</header>

<body id="loginBody">

    <div class="col-sm-8 col-sm-offset-2">

        <form class="form-signin" action="/login" method="post">
          <label><span class="fa fa-sign-in"></span> Login</label>
          <div class="form-group">
              <input type="text" class="form-control" name="email" placeholder="Email Address" required="" autofocus="" />
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required ="" />
          </div>
          <div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
          </div>
          <% if (message != null) { %>
          	<div class="alert-danger"><%= message %></div>
          <% } %>
          <i class="fa fa-sign-in"></i> Need an account?<a href="/signup"> Sign Up</a>
        </form>

    </div>
  </body>
</html>
