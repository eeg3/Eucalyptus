<% include partials/head %>

<script src="/js/ApiHelper.js"></script>
<script src="/js/admin.js"></script>

<header class="container-fluid">
  <h1 id="intro" class="loginColor"><i class="fa fa-leaf leafLogo"></i> Eucalyptus</h1>
  <p class="lead loginColor">Conquering complexity with simplicity.</p>
</header>

<body id="indexBody">
<% include partials/navbar %>

<div class="container-fluid">


<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-inverse">
      <div class="panel-heading">User Account Administration</div>
      <div class="panel-body">

        <div class="alert alert-gray">
          Add users, delete users, and patch user settings. Users are disabled by default, so they must be enabled here to allow them to actually log in after signing up.
        </div>

          <div class="row">
            <div class="col-sm-12">
              <table id="userDetailsTable" class="table table-bordered">
                <thead>
                  <th>ID</th><th>Email</th><th>Enabled</th><th>Action</th>
                </thead>
                <tbody>
                  <tr></tr>
                </tbody>
              </table>
            </div>
          </div>

        <div class="row">
          <div class="col-sm-4">
            <div class="panel panel-inverse">
              <div class="panel-heading">Add User</div>
              <div class="panel-body">
                <form action="/users/" enctype="application/x-www-form-urlencoded" method="post" >
                  <div class="form-group">
                    <label for="title">Email Address</label>
                    <input type="text" class="form-control" name="email"></input>
                  </div>
                  <div class="form-group">
                    <label for="author">Password</label>
                    <input type="password" class="form-control" name="password"></input>
                  </div>
                  <input type="submit" class="btn btn-default btn-block" value="Add User"></button>
                </form>
              </div>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="panel panel-inverse">
              <div class="panel-heading">Delete User</div>
              <div class="panel-body">
                <form id="deleteForm">
                  <div class="form-group">
                    <label for="flightplan">User ID</label>
                    <input type="text" class="form-control" name="delUser"></input>
                  </div>

                </form>
                <button id="deleteButton" class="btn btn-default btn-block">Delete</button>
              </div>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="panel panel-inverse">
              <div class="panel-heading">Patch User</div>
              <div class="panel-body">
                <form action="/users/" enctype="application/x-www-form-urlencoded" method="patch" >
                  <div class="form-group">
                    <label for="patchId">ID</label>&nbsp;<span class="label label-danger" id="warningPatch"></span>
                    <input type="text" class="form-control" name="patchId"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchEmail">Email</label>
                    <input type="text" class="form-control" name="patchEmail"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchPassword">Password</label>
                    <input type="password" class="form-control" name="patchPassword"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchEnabled">Enabled</label>
                    <input type="text" class="form-control" name="patchEnabled"></input>
                  </div>
                </form>

                <button id="patchButton" class="btn btn-default btn-block">Patch User</button>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-inverse">
      <div class="panel-heading">FlightPlan Administration</div>
      <div class="panel-body">

        <div class="alert alert-gray">
          Patch FlightPlan data, as well as remove FlightPlans from the system.
        </div>

        <div class="row">
          <div class="col-sm-12">
            <table id="flightplanDetailsTable" class="table table-bordered">
              <thead>
                <th>ID</th><th>Title</th><th>Author</th><th>Category</th><th>Product</th><th>Description</th><th>Action</th>
              </thead>
              <tbody>
                <tr></tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-6">
            <button id="toggleSteps" class="btn btn-success">Toggle Steps Table</button><br><br>
          </div>
          <div class="col-sm-3"></div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <table id="flightplanStepsTable" class="table table-bordered">
              <thead>
                <th>ID</th><th>Title</th><th>Steps</th>
              </thead>
              <tbody>
                <tr></tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-6">
            <div class="panel panel-inverse">
              <div class="panel-heading">Patch Flightplan</div>
              <div class="panel-body">
                <form>
                  <div class="form-group">
                    <label for="patchFpId">ID</label>&nbsp;<span class="label label-danger" id="warningPatch"></span>
                    <input type="text" class="form-control" name="patchFpId"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpTitle">Title</label>
                    <input type="text" class="form-control" name="patchFpTitle"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpAuthor">Author</label>
                    <input type="text" class="form-control" name="patchFpAuthor"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpRevision">Revision</label>
                    <input type="text" class="form-control" name="patchFpRevision"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpCategory">Category</label>
                    <input type="text" class="form-control" name="patchFpCategory"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpProduct">Product</label>
                    <input type="text" class="form-control" name="patchFpProduct"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpDescription">Description</label>
                    <input type="text" class="form-control" name="patchFpDescription"></input>
                  </div>
                  <div class="form-group">
                    <label for="patchFpSteps">Steps</label>
                    <input type="text" class="form-control" name="patchFpSteps"></input>
                  </div>
                </form>

                <button id="patchFlightplanButton" class="btn btn-default btn-block">Patch FlightPlan</button>

              </div>
            </div>
          </div>
          <div class="col-sm-3"></div>
        </div>

      </div>
    </div>
  </div>
</div>




</div>

<footer class="container-fluid">
<div class="alert alert-gray">
  <p id="footer"><i class="fa fa-copyright"></i>&nbsp;2016 <a href="https://github.com/eeg3">https://github.com/eeg3</a>
</div>
</footer>

</body>
</html>
